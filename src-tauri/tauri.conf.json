{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "my-tauri-app",
	"version": "0.1.0",
	"identifier": "com.example.my-tauri-app",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "TCP Terminal",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			},
			{
				"label": "settings",
				"title": "設定",
				"width": 500,
				"height": 400,
				"resizable": true,
				"fullscreen": false,
				"visible": false,
				"url": "/settings"
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
